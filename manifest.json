{
  "manifest_version": 2,

  "name": "Lullaby",
  "description": "A sleep timer for streaming web services.",
  "version": "0.9",
  
  "icons": { "128": "images/icon128.png" },

  "background": { 
	"scripts": ["lullaby.js"],
	"persistent": false
  },
  
  "page_action": {
    "default_icon": {
		"19": "images/icon19.png",
		"38": "images/icon38.png"
	},
	"default_title": "Lullaby",
    "default_popup": "popup.html"
  },
  
  "permissions": [
	"tabs",
	"alarms"
  ]
}
